{
  "name": "style-forge",
  "version": "0.1.5",
  "description": "Type-safe MapLibre style expression builder",
  "author": "Quoc Duong Bui",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/canida/style-forge.git"
  },
  "bugs": {
    "url": "https://github.com/canida/style-forge/issues"
  },
  "homepage": "https://github.com/canida/style-forge#readme",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "peerDependencies": {
    "@maplibre/maplibre-gl-style-spec": ">=23.0.0"
  },
  "keywords": [
    "maplibre",
    "mapbox",
    "expressions",
    "styling",
    "typescript",
    "builder"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --project tsconfig.build.json",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write . || true"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^24.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdom": "^25.0.1",
    "maplibre-gl": "^5.14.0",
    "prettier": "^3.3.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.13.0",
    "vite": "^7.2.4",
    "vitest": "^2.1.8"
  }
}
